mixin enumerate(arr)
    for item in arr
        div.row.pollrow
            div.col-md-2.col-xs-12.pollcoluser
                button(class="btn",id="comuserid").rowlink #{item.username}
            div.col-md-10.col-xs-12.pollcolques
                button(class="btn",id="comquesid").rowlink #{item.pollques}
            block

